# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Game {
  id: ID!
  name: String!
  slug: String!
}

type Character {
  id: ID!
  name: String!
  game: Game!
}

input NewCharacter {
  name: String!
  gameId: String!
}

input NewGame {
  slug: String!
  name: String!
}


type Mutation {
  createGame(input: NewGame!): Game!
  createCharacter(input: NewCharacter!): Character!
}
